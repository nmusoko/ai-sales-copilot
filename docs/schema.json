{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Sales Copilot Output Schema",
  "type": "object",
  "properties": {
    "client_name": { "type": ["string", "null"] },
    "meeting_summary": { "type": "string" },
    "sentiment": {
      "type": "string",
      "enum": ["Positive", "Neutral", "Negative"]
    },
    "entities": {
      "type": "object",
      "properties": {
        "company": { "type": ["string", "null"] },
        "decision_maker": { "type": ["string", "null"] },
        "budget": { "type": ["string", "null"] },
        "timeline": { "type": ["string", "null"] }
      },
      "required": ["company", "decision_maker", "budget", "timeline"]
    },
    "objections": {
      "type": "array",
      "items": { "type": "string" }
    },
    "next_steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "owner": { "type": "string" },
          "task": { "type": "string" },
          "due": { "type": ["string", "null"], "format": "date-time" }
        },
        "required": ["owner", "task", "due"]
      }
    },
    "email_draft": {
      "type": "object",
      "properties": {
        "subject": { "type": "string" },
        "body_markdown": { "type": "string" }
      },
      "required": ["subject", "body_markdown"]
    },
    "meta": {
      "type": "object",
      "properties": {
        "transcript_id": { "type": ["string", "null"] },
        "model_version": { "type": "string" },
        "generated_at": { "type": "string", "format": "date-time" }
      },
      "required": ["model_version", "generated_at"]
    }
  },
  "required": [
    "meeting_summary",
    "sentiment",
    "entities",
    "next_steps",
    "email_draft",
    "meta"
  ]
}
